{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "rootDir": "src",

    "target": "es6",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": ["src", "index.d.ts", "global.d.ts"]
}
