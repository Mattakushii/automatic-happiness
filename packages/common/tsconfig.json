{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "decLib",
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "target": "es6",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "index.d.ts", "global.d.ts", "tailwind.config.js"]
}
