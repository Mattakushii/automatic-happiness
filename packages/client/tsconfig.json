{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "src": ["./src"],
      "Core": ["./src/Core"],
      "Features": ["./src/Features"]
    }
  },
  "exclude": ["node_modules"]
}
